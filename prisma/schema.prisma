// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  createdAt DateTime @default(now())

  salt         String
  hash         String

  profileImage String? //base64

  forums   Forum[]   @relation("ForumCreatedBy")
  messages Message[] @relation("MessageCreatedBy")
}

model Forum {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  createdAt   DateTime @default(now())

  messages Message[]

  userId String
  user   User   @relation("ForumCreatedBy", fields: [userId], references: [id])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  author    String
  createdAt DateTime @default(now())

  forum   Forum  @relation(fields: [forumId], references: [id], onDelete: Cascade)
  forumId String

  userId String
  user   User   @relation("MessageCreatedBy", fields: [userId], references: [id])

  images Image[]
}

model Image {
  id        String   @id @default(uuid())
  filename  String
  data      String   // base64 encoded string
  uploadedAt DateTime @default(now())

  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId String
}
